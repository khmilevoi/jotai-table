{
  "name": "jotai-table",
  "version": "0.2.0",
  "description": "Table component using jotai",
  "private": false,
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "default": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./*": {
      "import": {
        "types": "./dist/plugins/*/index.d.ts",
        "default": "./dist/plugins/*/index.mjs"
      },
      "default": {
        "types": "./dist/plugins/*/index.d.ts",
        "default": "./dist/plugins/*/index.js"
      }
    }
  },
  "sideEffects": false,
  "scripts": {
    "build": "rollup -c rollup.config.mjs",
    "test": "vitest run",
    "lint": "pnpm run lint:prettier && pnpm run lint:eslint",
    "lint:prettier": "prettier src --config ./.prettierrc.json --check",
    "lint:eslint": "eslint",
    "fix": "pnpm run fix:prettier && pnpm run fix:eslint",
    "fix:eslint": "eslint --fix",
    "fix:prettier": "prettier src --write --config ./.prettierrc.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/khmilevoi/jotai-table.git"
  },
  "keywords": [
    "jotai",
    "jotai-table",
    "react"
  ],
  "author": "khmilevoi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/khmilevoi/jotai-table/issues"
  },
  "homepage": "https://github.com/khmilevoi/jotai-table#readme",
  "dependencies": {
    "jotai-effect": "^1.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.11.1",
    "@rollup/plugin-swc": "^0.4.0",
    "@swc/core": "^1.7.26",
    "@types/node": "^22.7.4",
    "@types/react": "^18.3.10",
    "eslint": "^9.11.1",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^15.9.0",
    "jotai": "^2.10.0",
    "prettier": "^3.3.3",
    "react": "^18.3.1",
    "rollup": "^4.22.5",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-swc3": "^0.11.2",
    "typescript-eslint": "^8.7.0",
    "vitest": "^2.1.1"
  },
  "peerDependencies": {
    "jotai": "^2.10.0",
    "react": "^18.3.1",
    "typescript": "^5.6.2"
  }
}
